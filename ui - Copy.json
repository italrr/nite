					]
				},
				{
					"type": "panel",
					"flex": 1,
					"layout": "hbox",
					"children": [
						{
							"type": "panel",
							"flex": 1
						},
						{
							"type": "button",
							"text": "CENTERED BUTTON",
							"margin": {"hor":200.0, "vert": 0.0}
						},
						{
							"type": "panel",
							"flex": 1
						}
					]
				}	
			]
		},
		{
			"type": "button",
			"text": "Button 1",
			"onClick": "method1",
			"baseColor": {"r":0.15, "g":0.15, "b":1, "a":1},
			"fontColor": {"r":0, "g":0, "b":0, "a":1},
			"secondColor": {"r":0.15, "g":0.15, "b":0.90, "a":1}
		},
		{
			"type": "button",
			"text": "Button 16000",
			"width": -1,
			"height": -1
		},
		{
			"type": "panel",
			"flex": 0.25,
			"layout": "hbox",
			"children":[
				{
					"type": "panel",
					"flex": 1					
				},
				{
					"type": "checkbox",
					"text": "asdasd CHECK BOX",
					"onChange": "checkboxchange1",
					"fontColor": {"r":0, "g":0, "b":1, "a":1},
					"selectorColor": {"r":1, "g":0, "b":0, "a":1},
					"boxColor": {"r":0, "g":0, "b":1, "a":1},
					"fontSize": 14
				},
				{
					"type": "panel",
					"flex": 1					
				}				
			]
		},
		{
			"type": "panel",
			"width": 50,
			"height": 50,
			"layout": "hbox",
			"backgroundColor": {"r":1, "g":1, "b":0, "a":1},
			"onHover": "hovermethod",
			"onUnhover": "unhovermethod"
		}
	]
