						{
							"type": "panel",
							"flex": 1
						},
						{
							"type": "text",
							"text": "RIGHT TEXT"
						}
					]
				},
				{
					"type": "panel",
					"flex": 1,
					"layout": "hbox",
					"children": [
						{
							"type": "text",
							"text": "LEFT TEXT"
						},					
						{
							"type": "panel",
							"flex": 1
						}
					]
				},
				{
					"type": "panel",
					"flex": 1,
					"layout": "hbox",
					"children": [
						{
							"type": "panel",
							"flex": 1
						},
						{
							"type": "panel",
							"flex": 1
						},
						{
							"type": "panel",
							"flex": 1
						},							
						{
							"type": "text",
							"text": "2/3rd TEXT"
						},					
						{
							"type": "panel",
							"flex": 1
						}
					]
				},
				{
					"type": "panel",
					"flex": 1,
					"layout": "hbox",
					"children": [
						{
							"type": "panel",
							"flex": 1
						},		
						{
							"type": "text",
							"text": "1/3rd TEXT"
