{
	"type": "window",
	"notitle": true,
	"title": "Player Info",
	"unmovable": true,
	"resizeable": false,
	"width": 220,
	"height": 155,
	"borderThickness": 2.0,
	"layout": "vbox",
	"borderColor": "#000000",
	"backgroundColor": {"r":0.1, "g": 0.1, "b": 0.1, "a": 0.85},
	"styles": {
		"main-text": {
			"font": "data/font/DejaVuSans.ttf",
			"fontSize": 16,
			"fontThickness": 2.0,
			"padding": { "hor": 0, "vert": 0 }			
		},
		"sub-text": {
			"font": "data/font/DejaVuSans.ttf",
			"fontSize": 12,
			"fontThickness": 2.0,
			"padding": { "hor": 0, "vert": 0 }			
		},		
		"stat-bar": {
			"height": "100%",
			"backgroundColor": "#211e30",
			"borderColor": "#000000",
			"borderThickness": 0.0
		}
	},
	"children": [
		{
			"type": "panel",
			"width": "100%",
			"height": "100%",
			"padding": { "vert": 8, "hor": 8 },		
			"layout": "vbox",			
			"children": [
				{
					"type": "panel",
					"width": "100%",
					"height": 28,
					"layout": "hbox",
					"padding": { "vert": 4, "hor": 0 },	
					"children": [
						{
							"type": "panel",
							"flex": 1
						},
						{
							"id": "name",
							"type": "text",
							"text": "NAME",
							"style": "main-text"
						},
						{
							"type": "panel",
							"flex": 1
						}						
					]
				},
				{
					"type": "panel",
					"flex": 1,
					"width": "100%",
					"layout": "vbox",
					"padding": { "hor": 4, "vert": 8}
					"children": [
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,			
							"padding": {"vert": 0, "hor": 0},							
							"layout": "hbox",
							"children": [
								{
									"type": "text",
									"style": "sub-text",
									"height": "100%",
									"text": "HP",
									"flex": 1
								},
								{
									"type": "progressive-bar",
									"style": "stat-bar",
									"flex": 2,
									"id": "health-bar",
									"barColor": "#55aa22",
									"reduceColor": "#ff260d",
									"useReduce": true
								}
							]
						},
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,
							"layout": "hbox",
							"children": [
								{
									"type": "panel",
									"flex": 1
								},
								{
									"type": "text",
									"id": "health-text",
									"text": "0 / 0",
									"style": "sub-text"
								}								
							]
							
						},
						{
							"type": "panel",
							"height": 1,
							"width": "100%",
							"padding": {"vert": 8, "hor": 0}
						},
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,			
							"padding": {"vert": 0, "hor": 0},							
							"layout": "hbox",
							"children": [
								{
									"type": "text",
									"style": "sub-text",
									"height": "100%",
									"text": "SP",
									"flex": 1
								},
								{
									"type": "progressive-bar",
									"style": "stat-bar",
									"flex": 2,
									"id": "sp-bar",
									"barColor": "#478bfa"
								}
							]
						},
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,
							"layout": "hbox",
							"children": [
								{
									"type": "panel",
									"flex": 1
								},
								{
									"type": "text",
									"id": "sp-text",
									"text": "0 / 0",
									"style": "sub-text"
								}								
							]
							
						}						
					]
				}			
			]
		}
	]
}