{
	"type": "window",
	"notitle": true,
	"title": "Player Info",
	"unmovable": true,
	"resizeable": false,
	"width": 200,
	"height": 140,
	"borderThickness": 2.0,
	"layout": "vbox",
	"borderColor": "#000000",
	"backgroundColor": {"r":0.1, "g": 0.1, "b": 0.1, "a": 0.85},
	"styles": {
		"main-text": {
			"font": "data/font/SimvoniBold-w1dOn.otf",
			"fontSize": 18,
			"fontThickness": 2.0,
			"padding": { "hor": 0, "vert": 2 }			
		}
	},
	"children": [
		{
			"type": "panel",
			"width": "100%",
			"height": "100%",
			"padding": { "vert": 8, "hor": 8 },		
			"layout": "vbox",			
			"children": [
				{
					"type": "panel",
					"width": "100%",
					"height": 28,
					"layout": "hbox",
					"children": [
						{
							"type": "panel",
							"flex": 1
						},
						{
							"id": "name",
							"type": "text",
							"text": "NAME",
							"style": "main-text"
						},
						{
							"type": "panel",
							"flex": 1
						}						
					]
				},
				{
					"type": "panel",
					"flex": 1,
					"width": "100%",
					"layout": "vbox",
					"padding": { "hor": 4, "vert": 4}
					"children": [
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,			
							"padding": {"vert": 4, "hor": 0},							
							"layout": "hbox",
							"children": [
								{
									"type": "text",
									"style": "main-text",
									"height": "100%",
									"text": "HP",
									"flex": 1
								},
								{
									"type": "progressive-bar",
									"flex": 2,
									"id": "health-bar",
									"height": "100%",
									"backgroundColor": "#211e30",
									"borderColor": "#000000",
									"borderThickness": 2.0,
									"barColor": "#55aa22",
									"reduceColor": "#ff260d",
									"useReduce": true
								}
							]
						},
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,			
							"padding": {"vert": 4, "hor": 0},							
							"layout": "hbox",
							"children": [
								{
									"type": "text",
									"style": "main-text",
									"height": "100%",
									"text": "SP",
									"flex": 1
								},
								{
									"type": "progressive-bar",
									"flex": 2,
									"id": "sp-bar",
									"height": "100%",
									"backgroundColor": "#211e30",
									"borderColor": "#000000",
									"borderThickness": 2,
									"barColor": "#ff9000"
								}
							]
						},
						{
							"type": "panel",
							"width": "100%",
							"flex": 1,		
							"padding": {"vert": 4, "hor": 0},
							"layout": "hbox",
							"children": [
								{
									"type": "text",
									"style": "main-text",
									"height": "100%",
									"text": "ST",
									"flex": 1
								},
								{
									"type": "progressive-bar",
									"flex": 2,
									"id": "st-bar",
									"height": "100%",
									"backgroundColor": "#211e30",
									"borderColor": "#000000",
									"barColor": "#1937d5",
									"borderThickness": 2
								}
							]
						}						
					]
				}			
			]
		}
	]
}