{
	"type": "window",
	"title": "Menu",
	"notitle": true,
	"width": 388,
	"height": 388,
	"layout": "inline",
	"unmovable": true,
	"resizeable": false,
	"modal": true,
    "borderThickness": 2.0,
	"position": {
		"x": "!! #gwidth * 0.5 - 196",
		"y": "!! #gheight * 0.5 - 196"
	},
	"backgroundColor": {"r": 0.08, "g": 0.08, "b": 0.08, "a": 1.0},
	"borderColor": {"r": 0.02, "g": 0.02, "b": 0.02, "a": 1.0 },
