		{
			"type": "button"
			"style": "menubutton",
			"text": "CRAFT"
		},
		{
			"type": "button"
			"style": "menubutton",
			"text": "MAP"
		},	
		{
			"type": "button"
			"style": "menubutton",
			"text": "QUEST"
		},
		{
			"type": "button"
			"style": "menubutton",
